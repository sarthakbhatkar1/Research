# LiteLLM Configuration for GenAI Service
# Upload this to Azure Blob Storage container: litellm-config

model_list:
  # ============================================
  # Azure OpenAI - Multiple Regions with Different MIs
  # ============================================
  
  # East US
  - model_name: gpt-4
    litellm_params:
      model: azure/gpt-4-eastus-deployment
      api_base: https://eastus-openai.openai.azure.com/
      api_version: "2024-02-01"
      client_id: os.environ/EASTUS_MI_CLIENT_ID
      tenant_id: os.environ/AZURE_TENANT_ID
    litellm_settings:
      enable_azure_ad_token_refresh: true
  
  # West US
  - model_name: gpt-4
    litellm_params:
      model: azure/gpt-4-westus-deployment
      api_base: https://westus-openai.openai.azure.com/
      api_version: "2024-02-01"
      client_id: os.environ/WESTUS_MI_CLIENT_ID
      tenant_id: os.environ/AZURE_TENANT_ID
    litellm_settings:
      enable_azure_ad_token_refresh: true

  # ============================================
  # Azure OpenAI - API Key Based
  # ============================================
  
  - model_name: gpt-35-turbo
    litellm_params:
      model: azure/gpt-35-turbo
      api_base: https://your-resource.openai.azure.com/
      api_key: os.environ/AZURE_OPENAI_API_KEY
      api_version: "2024-02-01"

  # ============================================
  # Databricks - Service Principal
  # ============================================
  
  - model_name: llama-3-70b
    litellm_params:
      model: databricks/databricks-meta-llama-3-1-70b-instruct
      api_base: https://your-workspace.databricks.com/serving-endpoints
      client_id: os.environ/DATABRICKS_CLIENT_ID
      client_secret: os.environ/DATABRICKS_CLIENT_SECRET
      tenant_id: os.environ/DATABRICKS_TENANT_ID

# ============================================
# Router Settings - Load Balancing
# ============================================

router_settings:
  routing_strategy: simple-shuffle
  num_retries: 2
  timeout: 600

# ============================================
# General Settings
# ============================================

general_settings:
  set_verbose: true
  drop_params: true
